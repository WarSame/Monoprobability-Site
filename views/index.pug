mixin property-block(name, price, color_class, offset)
  div.no-pad.col-lg-1.col-md-1(class="col-lg-offset-" + offset + " col-md-offset-" + offset + " col-sm-offset-" + offset + " col-xs-offset-" + offset)
    div.block
      div.block-top(class=color_class)
      div.block-main
        p.block-name= name
        p.block-price {{squares[1].norm_value}}

